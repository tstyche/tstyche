{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "paths": {
      "#scribbler/jsx-runtime": ["../source/scribbler/jsxRuntime.js"],
      "#*": ["../source/*/index.js"]
    },

    "verbatimModuleSyntax": true,

    "jsx": "react-jsx",
    "jsxImportSource": "#scribbler",
    "target": "es2023",

    "skipLibCheck": false
  },
  "include": ["**/*.ts"],
  "exclude": [
    "**/__tests__/**/*",
    "**/build/**"
  ]
}
