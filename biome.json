{
  "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",

  "files": {
    "ignore": [
      ".cache/**",
      ".yarn/**",
      "build/**",
      "coverage/**",
      "models/CommandLineOptions.ts",
      "models/config-schema.json",
      "models/ConfigFileOptions.ts",
      "node_modules/**",
      "package.json"
    ]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },

  "linter": {
    "enabled": true,

    "rules": {
      "recommended": true,

      "complexity": {
        "noUselessStringConcat": "error",
        "noUselessUndefinedInitialization": "error",
        "useDateNow": "error",

        "noBannedTypes": "off",
        "noStaticOnlyClass": "off",
        "useLiteralKeys": "off"
      },

      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedFunctionParameters": "error",
        "noUnusedImports": "error",
        "noUnusedPrivateClassMembers": "error",
        "noUnusedVariables": "error",
        "useImportExtensions": "error",

        "useJsxKeyInIterable": "off"
      },

      "style": {
        "noImplicitBoolean": "error",
        "noNegationElse": "error",
        "noParameterProperties": "error",
        "noYodaExpression": "error",
        "useBlockStatements": "error",
        "useCollapsedElseIf": "error",
        "useConsistentArrayType": {
          "level": "error",
          "options": {
            "syntax": "generic"
          }
        },
        "useConsistentBuiltinInstantiation": "error",
        "useExplicitLengthCheck": "error",
        "useNamingConvention": "error",
        "useForOf": "error",
        "useShorthandAssign": "error",
        "useThrowNewError": "error",

        "noParameterAssign": "off"
      },

      "suspicious": {
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["info"]
          }
        },
        "noEvolvingTypes": "error",
        "noMisplacedAssertion": "error",
        "noSkippedTests": "error",
        "useAwait": "error",
        "useErrorMessage": "error",
        "useNumberToFixedDigitsArgument": "error",

        "noConstEnum": "off"
      }
    }
  },

  "organizeImports": {
    "enabled": true
  },

  "overrides": [
    {
      "include": ["source/handlers/ResultHandler.ts", "source/version/Version.ts"],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off"
          }
        }
      }
    },

    {
      "include": ["source/types.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off"
          }
        }
      }
    },

    {
      "include": ["**/*.tst.ts", "**/*.tst.tsx"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off"
          },
          "suspicious": {
            "noConfusingVoidType": "off",
            "noExplicitAny": "off"
          }
        }
      }
    },

    {
      "include": ["**/__fixtures__/**/*.tst.ts"],
      "linter": {
        "rules": {
          "complexity": {
            "noBannedTypes": "off",
            "useArrowFunction": "off"
          },
          "style": {
            "useEnumInitializers": "off",
            "noUnusedTemplateLiteral": "off"
          },
          "suspicious": {
            "noFocusedTests": "off",
            "noSkippedTests": "off"
          }
        }
      }
    }
  ]
}
