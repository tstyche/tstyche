{
  "$schema": "https://biomejs.dev/schemas/2.0.0-beta.6/schema.json",

  "json": {
    "parser": {
      "allowComments": true
    }
  },

  "files": {
    "includes": [
      "**",
      "!**/.yarn/**",
      "!**/build/**",
      "!**/coverage/**",
      "!**/models/CommandLineOptions.ts",
      "!**/models/config-schema.json",
      "!**/models/ConfigFileOptions.ts",
      "!**/node_modules/**",
      "!**/cspell.config.json",
      "!**/package.json"
    ]
  },

  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "lineWidth": 120
  },

  "linter": {
    "enabled": true,

    "rules": {
      "recommended": true,

      "complexity": {
        "noUselessStringConcat": "error",
        "noUselessUndefinedInitialization": "error",
        "useDateNow": "error",

        "noBannedTypes": "off",
        "noStaticOnlyClass": "off",
        "useLiteralKeys": "off"
      },

      "correctness": {
        "noUndeclaredDependencies": "error",
        "noUndeclaredVariables": "error",
        "noUnusedFunctionParameters": "error",
        "noUnusedImports": "error",
        "noUnusedPrivateClassMembers": "error",
        "noUnusedVariables": "error",
        "useImportExtensions": "error",

        "useJsxKeyInIterable": "off"
      },

      "style": {
        "noImplicitBoolean": "error",
        "noNegationElse": "error",
        "noParameterProperties": "error",
        "noYodaExpression": "error",
        "useBlockStatements": "error",
        "useCollapsedElseIf": "error",
        "useConsistentArrayType": {
          "level": "error",
          "options": {
            "syntax": "generic"
          }
        },
        "useConsistentBuiltinInstantiation": "error",
        "useExplicitLengthCheck": "error",
        "useNamingConvention": "error",
        "useForOf": "error",
        "useShorthandAssign": "error",
        "useThrowNewError": "error",
        "useAsConstAssertion": "error",
        "useDefaultParameterLast": "error",
        "useSelfClosingElements": "error",
        "useSingleVarDeclarator": "error",
        "useNumberNamespace": "error",
        "noInferrableTypes": "error",
        "noUselessElse": "error",

        "noParameterAssign": "off"
      },

      "suspicious": {
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["info"]
          }
        },
        "noEvolvingTypes": "error",
        "noMisplacedAssertion": "error",
        "noSkippedTests": "error",
        "useAwait": "error",
        "useErrorMessage": "error",
        "useNumberToFixedDigitsArgument": "error",

        "noConstEnum": "off"
      }
    }
  },

  "assist": { "actions": { "source": { "organizeImports": "on" } } },

  "overrides": [
    {
      "includes": ["**/examples/*"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedFunctionParameters": "off"
          }
        }
      }
    },

    {
      "includes": ["**/source/handlers/ResultHandler.ts"],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off"
          }
        }
      }
    },

    {
      "includes": ["**/source/types.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off"
          }
        }
      }
    },

    {
      "includes": ["**/tests/__utilities__/assert.js"],
      "linter": {
        "rules": {
          "suspicious": {
            "noMisplacedAssertion": "off"
          }
        }
      }
    },

    {
      "includes": ["**/*.tst.ts", "**/*.tst.tsx"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off"
          },
          "suspicious": {
            "noConfusingVoidType": "off",
            "noExplicitAny": "off"
          }
        }
      }
    },

    {
      "includes": ["**/__fixtures__/**/*.tst.ts"],
      "linter": {
        "rules": {
          "complexity": {
            "useArrowFunction": "off"
          },
          "style": {
            "useEnumInitializers": "off",
            "noUnusedTemplateLiteral": "off"
          },
          "suspicious": {
            "noFocusedTests": "off",
            "noSkippedTests": "off"
          }
        }
      }
    }
  ]
}
