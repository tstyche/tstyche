{
  "all": true,
  "exclude": [
    "benchmarks/**/*",
    "build/**/*",
    "coverage/**/*",
    "examples/**/*",
    "models/**/*",
    "tests/**/*",
    "typetests/**/*",
    "**/__tests__/**/*",
    "**/index.ts",
    "**/main.ts",
    "**/tstyche.ts",
    "**/types.ts",
    "*.config.js"
  ],
  "excludeAfterRemap": true,
  "mergeAsync": true,
  "reporter": ["json", "text"],
  "reporterOptions": {
    "json": {
      "file": "report.json"
    },
    "text": {
      "file": "report.txt",
      "skipFull": true
    }
  },
  "tempDirectory": "./.cache/coverage"
}
