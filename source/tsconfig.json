{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": ["es2024"],
    "module": "nodenext",
    "moduleResolution": "node16",

    "paths": {
      "#scribbler/jsx-runtime": ["./scribbler/jsxRuntime.js"],
      "#*": ["./*/index.js"]
    },

    "preserveConstEnums": true,
    "verbatimModuleSyntax": false, // otherwise const enums are not inlined, unfortunately

    "jsx": "react-jsx",
    "jsxImportSource": "#scribbler",

    "skipLibCheck": false
  },
  "include": ["**/*"],
  "exclude": ["**/__tests__/**/*"]
}
